local a, ItemBought, plr = 1, false, game.Players.LocalPlayer
if (plr.Backpack:FindFirstChild(getgenv().gun) == nil) and (plr.Character:FindFirstChild(getgenv().gun) == nil) then
repeat
        plr.Character.HumanoidRootPart.CFrame = getgenv().gun.Head.CFrame + Vector3.new(0, 3.2, 0)
        task.wait(0.2)
        fireclickdetector(getgenv().gun.ClickDetector)
        ItemBought = true
until ItemBought
if ItemBought then
    task.wait(1)
    if (plr.Backpack:FindFirstChild(getgenv().AmmoTobuy) == nil) and (plr.Character:FindFirstChild(getgenv().AmmoTobuy) == nil) then 
    repeat 
        plr.Character.HumanoidRootPart.CFrame = getgenv().AmmoTobuy.Head.CFrame + Vector3.new(0, 3.2, 0)
        task.wait(0.2)
        fireclickdetector(RevolverAmmoBuy.ClickDetector)
        a = a + 1
    until a == 130
_G.spin = true
end
end
end
